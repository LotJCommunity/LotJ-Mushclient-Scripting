# Monitor Camera Scan by Flek
# Efficiently scans all cameras
# paste the trigger into triggers and the alias into aliases, type spy to check every camera on a planet.

<triggers>
  <trigger
   enabled="y"
   group="cameraspam"
   match="Camera signal read... signal number *"
   sequence="100"
  >
  <send>moni %1</send>
  </trigger>
</triggers>

<aliases>
  <alias
   match="spy"
   enabled="y"
   send_to="12"
   sequence="100"
  >
  <send>EnableGroup("cameraspam", true)
Send("moni")
DoAfterSpecial(5, 'EnableGroup("cameraspam", false)', 12)</send>
  </alias>
</aliases>
